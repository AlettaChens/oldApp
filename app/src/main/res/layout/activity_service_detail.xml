<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/img_them_background">

    <LinearLayout
        android:id="@+id/ly_firm_order_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_title_background_orange"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backend"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@mipmap/img_to_back"/>

        <TextView
            android:id="@+id/tv_set_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:text="衣着服务"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_firm_order_back"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_type_service_pic"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_washclothes"/>

            <TextView
                android:id="@+id/service_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_type_service_pic"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="价格: ￥15"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/service_price"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="服务类容:洗衣服"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/service_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/service_name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:minHeight="60dp"
                android:text="简介:提供上门洗衣服务"
                android:textColor="@color/black"
                android:textSize="18dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp">
        <Button
            android:id="@+id/addShopCart"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:background="#F6BE52"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </RelativeLayout>
</RelativeLayout>